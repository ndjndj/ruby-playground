<% provide(:title, "Edit user") %>
<h1>Update your profile</h1>

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_with(model: @user) do |f| %>
            <%= render "shared/error_messages" %>

            <%= f.label :name %>
            <%= f.text_field :name, class: "form-control" %>
        <% end %>
    </div>
</div>